<!DOCTYPE html>
<html>
<head>
  <title class="fibHub">FibHub</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar">
    <center><h1><a class="navbar-title" href="/">FibHub</a></h1><center/>
      <center class="navbar-options">
        <%- if current_user -%>
          <%- if current_user.role == "Client"-%>
          <ul class="navbar-selections"><%= link_to 'My Advisor', viewadvisor_path, method: :get %></ul>
          <ul class="navbar-selections"><%= link_to 'Edit Profile', edit_user_registration_path, method: :get %></ul>
          <ul class="navbar-selections"><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></ul>
          <% end %>
          <%- if current_user.role == "Advisor"-%>
          <ul class="navbar-selections"><%= link_to 'My Clients', viewclients_path, method: :get %></ul>
          <ul class="navbar-selections"><%= link_to 'Edit Profile', edit_user_registration_path, method: :get %></ul>
          <ul class="navbar-selections"><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></ul>
          <%- end -%>
          <%- if current_user.role == "user"-%>
            <ul class="navbar-selections"><%= link_to 'Edit Profile', edit_user_registration_path, method: :get %></ul>
            <ul class="navbar-selections"><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></ul>
          <%- end -%>
        <% else %>
        <ul class="navbar-selections"><%= link_to 'Sign Up', new_user_registration_path %></ul>
        <ul class="navbar-selections"><%= link_to 'Sign In', new_user_session_path %></ul>
        <% end %>
  </nav>

  <%- flash.each do |key, value| -%>
    <div class="flash flash-<%= key %>">
      <%= value %>
    </div>
  <%- end -%>

  <%= yield %>

  <%= javascript_include_tag 'application' %>

  <%- if Rails.env.development? || Rails.env.test? -%>
    <%= javascript_tag do %>
      window.railsEnv = '<%= Rails.env %>'
    <%- end -%>
  <%- end -%>
  <%= javascript_pack_tag 'application' %>

  <%= yield :extra_footer %>
</body>
</html>
